@model ERS_Demo_Project.Models.Employee
@{
    ViewBag.Title = "UpdateEmployee";
}

<h2>Update Employee</h2>
<hr />

@using (Html.BeginForm("UpdateEmployee", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Name")
        @Html.TextBoxFor(x => x.Name, new { placeholder = "Name", @class = "form-control", style = "margin:0 auto;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Code, "Code")
        @Html.TextBoxFor(x => x.Code, new { placeholder = "Code", @class = "form-control", style = "margin:0 auto;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone, "Phone")
        @Html.TextBoxFor(x => x.Phone, new { placeholder = "Phone", @class = "form-control", style = "margin:0 auto;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.JobPosition, "Job Position")
        @Html.TextBoxFor(x => x.JobPosition, new { placeholder = "Job Position", @class = "form-control", style = "margin:0 auto;" })
    </div>

    <button type="submit" style="width:50%; margin-top:10px;" class="btn btn-outline-success">Update</button>

}
